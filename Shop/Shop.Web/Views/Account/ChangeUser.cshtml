@model Shop.Web.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Actualizar Usuario</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="FirstName">Nombre</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="PApellido">Primer Apellido</label>
                <input asp-for="PApellido" class="form-control" />
                <span asp-validation-for="PApellido" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="SApellido">Segundo Apellido</label>
                <input asp-for="SApellido" class="form-control" />
                <span asp-validation-for="SApellido" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Teléfono</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>

            <div class="form-group ">
                <table>
                    <tr>
                        <td>
                            <input type="submit" value="Actualizar" class="btn btn-primary" />
                        </td>

                        <td>
                            <a asp-action="ChangePassword" class="btn btn-success">Cambiar Contraseña</a>
                        </td>
                    </tr>
                </table>
            </div>
          
            <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
