@model Shop.Web.Models.ProductosViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Productos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltComp" class="control-label"></label>
                <input asp-for="UltComp" class="form-control" />
                <span asp-validation-for="UltComp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltVent" class="control-label"></label>
                <input asp-for="UltVent" class="form-control" />
                <span asp-validation-for="UltVent" class="text-danger"></span>
            </div>


            <div class="form-group form-check">


                <input class="form-check-input" asp-for="Disponi" />

                <label class="form-check-label  col-md-1 offset-md-1" asp-for="Disponi"></label>

            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </form>
    </div>
<div class="col-md-4">

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:300px;height:450px;max-width: 100%; height: auto;" />
    }
 </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-success btn-lg"><i class="fa fa-chevron-left"></i>Regresar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
